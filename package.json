    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,css,scss,html}'"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
