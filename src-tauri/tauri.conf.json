{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lite-sound",
  "version": "0.1.0",
  "identifier": "com.user.lite-player",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LiteSound",
        "width": 1200,
        "height": 800,
        "center": true,
        "decorations": false,
        "transparent": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png"
    ]
  }
}
